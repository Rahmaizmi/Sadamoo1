<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivDiseaseImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_sapi"
            android:scaleType="centerCrop"
            android:background="@drawable/image_rounded_corner"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDiseaseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penyakit Mulut dan Kuku (PMK)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDiseaseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penyakit virus akut yang sangat menular..."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/quicksand"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/severity_badge"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvContagious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menular"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_red_light"
                    android:background="@drawable/contagious_badge"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
