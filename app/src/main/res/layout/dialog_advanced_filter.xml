<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Lanjutan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="20dp" />

        <!-- Date Range -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rentang Tanggal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStartDate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Pilih Tanggal Mulai"
                android:textSize="12sp"
                android:background="@drawable/date_button_background"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEndDate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Pilih Tanggal Akhir"
                android:textSize="12sp"
                android:background="@drawable/date_button_background"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Status Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="16dp" />

        <!-- Severity Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tingkat Keparahan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSeverity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="16dp" />

        <!-- Cattle Type Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Sapi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCattleType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Batal"
                android:background="@drawable/button_cancel"
                android:textColor="#757575"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnResetFilter"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Reset"
                android:background="@drawable/button_reset"
                android:textColor="#FF5722"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnApplyFilter"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Terapkan"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
