<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upgrade ke Premium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="#757575" />

        </LinearLayout>

        <!-- Package Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Basic Package -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBasicPackage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Paket 1 - Rp 25.000 (1 x scan)"
                android:textSize="14sp"
                android:background="@drawable/package_button"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"/>

            <!-- Standard Package -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStandardPackage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Paket 2 - Rp 50.000 (1 x scan + konsultasi dengan dokter)"
                android:textSize="14sp"
                android:background="@drawable/package_button"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"/>

            <!-- Premium Package -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPremiumPackage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Paket 3 - Rp 100.000 (3 x scan + konsultasi dengn dokter)"
                android:textSize="14sp"
                android:background="@drawable/package_button"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"/>

            <!-- Ultimate Package -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUltimatePackage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Paket 4 - Rp 200.000 (Unlimited scan + konsultasi dengan dokter)"
                android:textSize="14sp"
                android:background="@drawable/package_button_recommended"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand"
                android:textAllCaps="false"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLater"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Nanti Saja"
                android:background="@drawable/button_cancel"
                android:textColor="#757575"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
