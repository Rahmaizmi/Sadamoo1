<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_background">

    <!-- Judul Aplikasi -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sada Moo"
        android:textSize="28sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="700"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Judul Daftar -->
    <TextView
        android:id="@+id/tvDaftarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAFTAR"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="700"
        android:layout_marginBottom="24dp" />

    <!-- Input Nama Lengkap -->
    <EditText
        android:id="@+id/etNamaLengkap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nama Lengkap"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="500"
        android:textColorHint="#B0BEC5"
        android:layout_marginBottom="16dp" />

    <!-- Input Email/No HP -->
    <EditText
        android:id="@+id/etEmailHp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email/Nomor HP"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="500"
        android:textColorHint="#B0BEC5"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp" />

    <!-- Input Buat Kata Sandi -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Buat Kata Sandi"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="500"
        android:textColorHint="#B0BEC5"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <!-- Input Konfirmasi Kata Sandi -->
    <EditText
        android:id="@+id/etKonfirmasiPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Konfirmasi Kata Sandi"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="500"
        android:textColorHint="#B0BEC5"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp" />

    <!-- Tombol Daftar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDaftar"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Daftar"
        android:textColor="@color/blue_primary"
        android:background="@drawable/button_rounded_white"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="700"
        android:layout_marginBottom="16dp" />

    <!-- Link Masuk -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun?"
            android:textColor="@android:color/black"
            android:fontFamily="@font/quicksand"
            android:textFontWeight="500"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="#4A90E2"
            android:fontFamily="@font/quicksand"
            android:textFontWeight="700"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>
