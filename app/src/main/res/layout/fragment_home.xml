<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang (nama user yang login)!"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="16dp" />

        <!-- Main Feature Card dengan gambar sapi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivMainCattle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_sapi"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sapi Brahman"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Sada Moo adalah aplikasi yang membantu peternak dalam mengetahui jenis sapi, usia sapi, dan mendeteksi penyakit sapi dengan cepat dan akurat melalui pemindaian."
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Features List dengan checkmark -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Feature Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="✓"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/ic_check_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan &amp; Deteksi Penyakit Sapi"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <!-- Feature Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="✓"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/ic_check_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelajari Penyakit &amp; Solusinya"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <!-- Feature Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="✓"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/ic_check_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantau Kesehatan Sapi"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <!-- Feature Item 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="✓"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/ic_check_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan Tips Perawatan"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <!-- Feature Item 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="✓"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/ic_check_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konsultasi dengan Dokter Hewan"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

        </LinearLayout>

        <!-- Horizontal RecyclerView untuk Jenis Sapi (akan diimplementasi nanti) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCattleTypes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginBottom="80dp" />

    </LinearLayout>

</ScrollView>
