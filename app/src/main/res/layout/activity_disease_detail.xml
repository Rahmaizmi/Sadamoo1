<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivDiseaseImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/disease_cacingan"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_rounded_corner"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvDiseaseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cacingan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvScientificName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Helminthiasis"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/tvSeverity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sedang"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/severity_badge"
                            android:padding="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvContagious"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menular"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/contagious_badge"
                            android:padding="6dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi penyakit..."
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/quicksand"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Symptoms Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” Gejala-Gejala"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/layoutSymptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Causes Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Penyebab"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/layoutCauses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Treatment Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’Š Pengobatan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/layoutTreatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Prevention Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›¡ï¸ Pencegahan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/layoutPrevention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Affected Animals Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ„ Hewan yang Terpengaruh"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/layoutAffectedAnimals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation (sama seperti activity lain) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Beranda -->
        <LinearLayout
            android:id="@+id/navBeranda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#B0B0B0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textSize="10sp"
                android:textColor="#B0B0B0"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

        <!-- Informasi -->
        <LinearLayout
            android:id="@+id/navInformasi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="#4A90E2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi"
                android:textSize="10sp"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

        <!-- FAB Deteksi (Center) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabDeteksi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_scan"
                android:backgroundTint="#4A90E2"
                app:tint="@android:color/white"
                app:borderWidth="0dp"
                app:elevation="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deteksi"
                android:textSize="10sp"
                android:textColor="#4A90E2"
                android:fontFamily="@font/quicksand"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="4dp" />

        </FrameLayout>

        <!-- Riwayat -->
        <LinearLayout
            android:id="@+id/navRiwayat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                app:tint="#B0B0B0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat"
                android:textSize="10sp"
                android:textColor="#B0B0B0"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:id="@+id/navProfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#B0B0B0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="10sp"
                android:textColor="#B0B0B0"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
