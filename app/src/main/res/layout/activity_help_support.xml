<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bantuan &amp; Dukungan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/quicksand"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Content - perbaiki dengan NestedScrollView untuk performa lebih baik -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contact Support -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hubungi Kami"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <!-- Phone Support -->
                    <Button
                        android:id="@+id/btnContactSupport"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ“ž Hubungi Support"
                        android:background="@drawable/button_primary"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp" />

                    <!-- Email Support -->
                    <Button
                        android:id="@+id/btnEmailSupport"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="âœ‰ï¸ Email Support"
                        android:background="@drawable/button_outline"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp" />

                    <!-- WhatsApp Support -->
                    <Button
                        android:id="@+id/btnWhatsappSupport"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ’¬ WhatsApp Support"
                        android:background="@drawable/button_whatsapp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Actions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aksi Cepat"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <!-- User Guide -->
                    <Button
                        android:id="@+id/btnUserGuide"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ“– Panduan Pengguna"
                        android:background="@drawable/button_outline"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp" />

                    <!-- Report Bug -->
                    <Button
                        android:id="@+id/btnReportBug"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ› Laporkan Bug"
                        android:background="@drawable/button_outline_red"
                        android:textColor="#F44336"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQ (Pertanyaan yang Sering Diajukan)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvFaqContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Memuat FAQ..."
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/quicksand"
                        android:lineSpacingExtra="4dp"
                        android:textIsSelectable="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
